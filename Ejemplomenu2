// ejemplomenu.cpp : Defines the entry point for the console application.
//
//librerias
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"

using namespace std;

//Prototipo de funciones
float POTEN(float x, int y);
int FAC(int n);
float serie (int X, int N);

//cuerpo principal
int main ()
{ float pot,base,facto,S;
  int opcion,exponente,n;
  // Inicio del menu
  do
  {	cout<<"Menu \n";
	cout<<"1.- Potencia \n";
	cout<<"2.- Factorial\n";
	cout<<"3.- Serie\n";
	cout<<"0.- Salir \n";
	cout<<"Opcion: ";
	cin>>opcion;
	switch(opcion)
	{
		case 1:{ 
			cout<<"Ingrese el valor de la base: ";
			cin>> base;
            cout<<"Ingrese el valor del exponente: ";
			cin>> exponente;
			pot= POTEN(base,exponente); // Llamada a POTEN
			cout << "La potencia de "<< base << "elevado a: "<<exponente<<" es: "<< pot;
			break; }
		case 2:{
		    cout<<"Ingrese el valor de N: ";
   			cin>> n;
			facto=FAC(n); //Llamada a FAC
			cout << "El factorial de " << n << "es: "<< facto;
			break; }
		case 3:{
			cout<<"Ingrese el valor de X: ";
			cin>> base;
            cout<<"Ingrese el valor de Y: ";
			cin>> exponente;
			S= serie(base,exponente); // Llamada a serie
			cout << "La suma de la serie es:  "<< S;
			break; }
		case 0:
				cout<<"salir\n";
				break;
		default: 
				cout<<"Opcion invalida";
	}
	getch();
	system("cls"); // Limpia la pantalla
  }	while(opcion!=0); // mientras sea opciÃ³n diferente de 0

  return 0;
}

float POTEN(float x, int y)
{
	float P=1; // Acumulador de producto
	for (int i=1;i<=y;i++)
		P=P*x;
	return P;
}

int FAC(int n)
{
	int P=1; // Acumulador de producto
	for (int i=2;i<=n;i++) // i es contador
		P=P*i;
	return P;
}

float serie (int X, int N)
{
	float S=0; // Acumulador de Suma
	for (int i=1;i<=N;i++) // i es contador
	    S=S+POTEN(X,i)/FAC(i);
	return S;
}
